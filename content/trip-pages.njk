---js
// <script>
const pagination = {
	data: "allTrips",
	size: 1,
	alias: "trip",
};

const eleventyExcludeFromCollections = true;

const eleventyComputed = {
	title: "{{ trip.title }}",
	permalink: "{{ trip.url }}"
};
---
<h1>{{ title }}</h1>

{% set postslist = trip | tripPosts | reverse %}
{% include "postslist.njk" %}

{%- set previousTrip = trip | previousTrip %}
{%- set nextTrip = trip | nextTrip %}
{%- if nextTrip or previousTrip %}
<ul class="links-nextprev">
	{%- if previousTrip %}<li class="links-nextprev-prev">← Previous<br> <a href="{{ previousTrip.url }}">{{ previousTrip.title }}</a></li>{% endif %}
	{%- if nextTrip %}<li class="links-nextprev-next">Next →<br><a href="{{ nextTrip.url }}">{{ nextTrip.title }}</a></li>{% endif %}
</ul>
{%- endif %}
