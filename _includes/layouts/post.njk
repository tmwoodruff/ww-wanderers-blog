---
layout: layouts/base.njk
---
{% if trip %}
<nav class="breadcrumbs">
	<ol>
		<li><a href="/trips/">Trips</a></li>
		<li><a href="{{ trip.url }}">{{ trip.title }}</a></li>
	</ol>
</nav>
{% endif %}
<h1>{{ title }}</h1>

<style>
	body { max-width: 50em; }
	p:has(> a.post-image) { display: flex;  gap: 1em 1em; flex-wrap: wrap; align-items: baseline; justify-content: center;}
	a.post-image { text-decoration: none; }
</style>

<ul class="post-metadata">
	<li><time datetime="{{ page.date | htmlDateString }}">{{ page.date | readableDate }}</time></li>
	{%- for tag in tags | filterTagList %}
	{%- set tagUrl %}/tags/{{ tag | slugify }}/{% endset %}
	<li><a href="{{ tagUrl }}" class="post-tag">{{ tag }}</a>{%- if not loop.last %}, {% endif %}</li>
	{%- endfor %}
</ul>

<div class="post-content">
{{ content | safe }}
</div>

{%- if collections.posts %}
{%- set previousItem = collections.posts | previousPostOrTrip %}
{%- set nextItem = collections.posts | nextPostOrTrip %}
{%- if nextItem or previousItem %}
<ul class="links-nextprev">
	{%- if previousItem %}<li class="links-nextprev-prev">← Previous<br> <a href="{{ previousItem.url }}">{{ previousItem.title }}</a></li>{% endif %}
	{%- if nextItem %}<li class="links-nextprev-next">Next →<br><a href="{{ nextItem.url }}">{{ nextItem.title }}</a></li>{% endif %}
</ul>
{%- endif %}
{%- endif %}
